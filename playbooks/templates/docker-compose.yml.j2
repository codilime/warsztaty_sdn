---
version: '2'

services:
    router:
        restart: always
        image: router
        volumes:
            - "{{ sdn_path }}:/opt/sdn"
#            - "{{ config_path }}:/opt/config"
        command: 'python3 -m sdn.router.flaskapp.app'
        cap_add:
          - NET_ADMIN
        networks:
          static-network:
            ipv4_address: 172.20.128.20
    controller:
        restart: always
        image: controller
        volumes:
            - "{{ sdn_path }}:/opt/sdn"
#            - "{{ config_path }}:/opt/config"
            - "/var/run/docker.sock:/var/run/docker.sock"
        cap_add:
          - NET_ADMIN
        command: 'python3 -m sdn.controller.flaskapp.app'
        networks:
          static-network:
            ipv4_address: 172.20.128.10

networks:
  static-network:
    ipam:
      config:
        - subnet: 172.20.0.0/16
          ip_range: 172.28.5.0/24
